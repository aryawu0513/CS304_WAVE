<!-- to decide: if we want to allow multiple search: by keyword, by date, etc. -->

<form method="GET" action="/search">
    <p>
        <label>Search for events: <input type="text" name="entry"></label>
        <label>
            <select name="kind">
                <option value="">Search Type</option>
                <option value="person">Host Name</option>
                <option value="eventName">Event Name</option>
                <option value="location">Location</option>
            </select>
        </label>
        <label for="date">Select date:</label>
        <input type="date" name="date" id="date" value="2024-01-01">
        <input type="submit" value="search">
    </p>
</form>

